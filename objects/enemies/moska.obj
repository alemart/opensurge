object "Moska"
{
    requires 0.2.0
    category "enemy" "level 1"
    annotation "A mosquito"

    state "main"
    {
        set_animation "Moska" 0
        let $speed=50+random(25)
        change_state "move"
    }

    state "move"
    {
        enemy 150
        mosquito_movement $speed
        look_at_walking_direction
    }
}
