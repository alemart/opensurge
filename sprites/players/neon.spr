    {
        repeat      TRUE
        fps         12
        data        19 20 21 22
    }

    // carrying someone
    animation 22
    {
        repeat      TRUE
        fps         8
        data        23 24
    }

    // relaxing, smiling, looking to the sky
    animation 23
    {
        repeat      FALSE
        fps         8
        data        57 58 59 57 58 59 57 58 59 57 58 59 57 58 59
    }

    // relaxing, smiling, not looking to the sky
    animation 24
    {
        repeat      FALSE
        fps         8
        data        60 61
    }

    // no longer relaxing... attention!
    animation 25
    {
        repeat      FALSE
        fps         8
        data        62 63 64
    }

    // no longer relaxing... standing up
    animation 26
    {
        repeat      FALSE
        fps         8
        data        65 66 67
    }

    // humpf... while sitting down
