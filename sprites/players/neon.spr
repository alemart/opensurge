    animation 32
    {
        repeat      FALSE
        fps         8
        data        71 72 73 71 72 73 71 72 73 71 72 73 71
    }

    // crouch up, after sitting down
    animation 33
    {
        repeat      FALSE
        fps         4
        data        84 85
    }

    // winning: Happy Easter!
    animation 34
    {
        repeat      FALSE
        fps         8
        data        90 91 92 93 94 95 96 97 98 99
    }

    // winning: Merry Christmas!
    animation 35
    {
        repeat      FALSE
        fps         8
        data        90 91 92 93 94 100 101 102 103 104
