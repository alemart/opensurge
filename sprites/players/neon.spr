// Character Sprite
sprite "Neon"
{
    source_file     "images/neon.png"
    source_rect     0 32 500 600
    frame_size      50 50
    hot_spot        25 30

    // stopped
    animation 0
    {
        repeat      TRUE
        fps         8
        data        0
    }

    // walking
    animation 1
    {
        repeat      TRUE
        fps         12
        data        1 2 3 4 5 4 3 2
    }

    // running
    animation 2
    {
        repeat      TRUE
        fps         12
        data        6 7
    }

    // jumping
    animation 3
    {
        repeat      TRUE
        fps         16
        data        8 9 10 11
    }

    // ducking
    animation 4
    {
        repeat      FALSE
        fps         12
        data        15
    }

    // looking up
    animation 5
    {
        repeat      FALSE
        fps         12
        data        25
    }

    // charging
    animation 6
    {
        repeat      TRUE
        fps         32
        data        8 9 10 11 //34 35 36 37
    }

    // braking
    animation 7
    {
        repeat      FALSE
        fps         8
        data        14
    }

    // dead
    animation 8
    {
        repeat      FALSE
        fps         8
        data        13
    }

    // drowned
    animation 9
    {
        repeat      FALSE
        fps         8
        data        13
    }

    // ledge
    animation 10
    {
        repeat      TRUE
        fps         6
        data        27 28
