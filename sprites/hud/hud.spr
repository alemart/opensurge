// Heads (life counter)
sprite SD_HUDHEAD
{
    source_file     images/hud.png
    source_rect     589 0 51 36
    frame_size      17 18
    hot_spot        9 9

    // Surge
    animation 0
    {
        repeat      TRUE
        fps         8
        data        0
    }

    // Neon
    animation 1
    {
        repeat      TRUE
        fps         8
        data        1
    }

    // Charge
    animation 2
    {
        repeat      TRUE
        fps         8
        data        2
    }

    // Tux
    animation 3
    {
        repeat      TRUE
        fps         8
        data        3
    }
}

