// script by Alexandre

// Background
sprite SD_HUDBACKGROUND
{
    source_file     images/hud.png
    source_rect     0 0 320 240
    frame_size      320 240
    hot_spot        0 0

    animation 0
    {
        repeat      TRUE
        fps         8
        data        0
    }
}

