    {
        repeat      TRUE
        fps         8
        data        60
    }

    // it_IT
    animation 6
    {
        repeat      TRUE
        fps         8
        data        113
    }

    // ru_RU
    animation 7
    {
        repeat      TRUE
        fps         8
        data        199
    }
    
    // uk_UA
    animation 8
    {
        repeat      TRUE
        fps         8
        data        239
    }
    
    // eo
