sprite "Flag Icon"
{
    source_file     "images/ui/flag_icons.png"
    source_rect     0 32 256 272
    frame_size      16 16
    hot_spot        8 8

    custom_properties
    {
        // associate each LANG_ID with an animation number
        // LANG_IDs are defined in the .lng files
        en_US       1
        pt_BR       2
        es_ES       3
        fr_FR       4
        de_DE       5
        it_IT       6
        ru_RU       7
        uk_UA       8
        eo          31
    }

    // unknown
    animation 0
    {
        repeat      TRUE
        fps         8
        data        0
    }

    // en_US
    animation 1
    {
        repeat      TRUE
        fps         8
        data        242
    }

    // pt_BR
